@{
    ViewData["Title"] = "task3";
}

@model Task3ViewModel

<div class="container mt-5 flex-grow-1">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="login-form">
                <h2 class="text-center mb-2">Task 3</h2>
                <p class="text-center">Пользователь вводит целое число N и целое число M. Выяснить,кратно ли N числу М.</p>
                <form method="post" asp-controller="Home" asp-action="Task3">
                    <div class="row g-3 mb-3">
                        <div class="col-auto">
                            <label class="col-form-label">N</label>
                        </div>
                        <div class="col">
                            @Html.TextBoxFor(m => m.N, new { @class = "form-control", id = "N", type = "number", placeholder = "N" })
                        </div>
                        <div class="col-auto">
                            <label class="col-form-label">M</label>
                        </div>
                        <div class="col">
                            @Html.TextBoxFor(m => m.M, new { @class = "form-control", type = "number", placeholder = "M" })
                        </div>
                    </div>
                    @if (Model != null && !string.IsNullOrEmpty(Model.ResultMessage))
                    {
                        <div class="alert alert-primary" role="alert">
                            @Model.ResultMessage
                        </div>
                    }
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-success btn-lg w-100">Результат</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
